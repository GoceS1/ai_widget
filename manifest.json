{
  "manifest_version": 3,
  "name": "AI Writing Widget",
  "version": "1.0.0",
  "description": "Context-aware AI writing assistant that appears on text selection",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Writing Widget"
  }
}
